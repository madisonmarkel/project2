<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">{{Recipe.recipe_name}}</h5>
          <ul>
            <strong>Ingredients</strong>: {{#each Recipe.ingredients}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <p>
            <strong>Instructions</strong>: {{Recipe.instructions}}</p>
          <p>
            <strong>Category</strong>: {{#each Recipe.type_category}}
            <p>{{this}}</p>
            {{/each}}
            <p>
              <strong>Dietary Types</strong>: {{#each Recipe.dietary_category}}
              <p>{{this}}</p>
              {{/each}}
            </p>
            <p>
              <strong>Servings</strong>: {{Recipe.serving}}</p>
            <p>
              <strong>Cook Time</strong>: {{Recipe.cook_time}}</p>
            <p>
              <strong>Appliances Used</strong>: {{Recipe.cook_method}}</p>

            <a href="/members">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>